---
import type { Website } from '../types/website';

interface Props {
  websiteData: Website;
}

const { websiteData } = Astro.props;

// Define the most important navigation sections
const mainSections = [
  { id: 'clone-repository', text: 'Clone this repository', href: 'https://github.com/greynewell/schema-driven-astro-starter' },
  { id: 'what-is-schema-driven-development', text: 'What is Schema-Driven Development', href: '#what-is-schema-driven-development' },
  { id: 'getting-started', text: 'Getting Started', href: '#getting-started' },
  { id: 'advanced-features', text: 'Advanced Features', href: '#advanced-features' }
];
---

<header>
  <nav>
    <div class="site-branding">
      <a href="/" class="brand-link" onclick="event.preventDefault(); window.scrollTo({top: 0, behavior: 'smooth'});">
        <h1>{websiteData.name}</h1>
      </a>
    </div>
    
    <ul class="nav-links">
      {mainSections.map((section) => (
        <li><a href={section.href}>{section.text}</a></li>
      ))}
    </ul>

    {websiteData.potentialAction?.map((action) => (
      <span class="search-icon disabled" title="Search (Coming Soon)">
        <svg viewBox="0 0 24 24">
          <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/>
        </svg>
      </span>
    ))}
  </nav>
</header>

<style>
  .brand-link {
    text-decoration: none;
    color: inherit;
    cursor: pointer;
    transition: opacity 0.2s ease;
  }

  .brand-link:hover {
    opacity: 0.8;
  }

  .brand-link::after {
    display: none;
  }
</style> 